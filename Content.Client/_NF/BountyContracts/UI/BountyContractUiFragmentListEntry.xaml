<Control xmlns="https://spacestation14.io">
    <PanelContainer Margin="8,8,8,8" StyleClasses="AngleRect" >
        <BoxContainer Orientation="Vertical">
            <BoxContainer Orientation="Horizontal">
                <Label Name="BountyName" HorizontalExpand="True" />
                <Label Name="BountyReward" HorizontalExpand="True"
                       HorizontalAlignment="Right"/>
            </BoxContainer>
            <PanelContainer StyleClasses="HighDivider" />
            <Label Name="BountyVessel" StyleClasses="LabelSubText"/>
            <BoxContainer HorizontalExpand="True">
                <RichTextLabel Name="BountyDescription" />
            </BoxContainer>
            <Label Name="BountyAuthor"
                   StyleClasses="WindowFooterText"/>
            <Label Name="BountyCreationTime"
                   StyleClasses="WindowFooterText"/>
        </BoxContainer>
    </PanelContainer>
</Control>
